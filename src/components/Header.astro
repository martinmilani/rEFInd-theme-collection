---
import ThemeSwitcher from "@components/ThemeSwitcher.astro";
import ColorSwatchIcon from "@src/icons/ColorSwatchIcon.astro";
import EmailIcon from "@src/icons/EmailIcon.astro";
import GitHubIcon from "@src/icons/GitHubIcon.astro";
import HomeIcon from "@src/icons/HomeIcon.astro";

const navItems = [
  {
    title: "Home",
    label: "home",
    url: "/#home",
    icon: HomeIcon
  },
  {
    title: "Contact",
    label: "contact",
    url: "mailto:martin.milani.mdq@gmail.com",
    icon: EmailIcon
  },
  {
    title: "Github",
    label: "github",
    url: "https://github.com/martinmilani/rEFInd-theme-collection",
    icon: GitHubIcon
  }
];
---

<nav class="fixed start-0 top-0 z-50 w-full bg-gray-50 dark:bg-gray-900">
  <div
    class="mx-auto flex max-w-screen-xl flex-wrap items-center justify-between p-4 lg:max-w-screen-2xl"
  >
    <a href="/#home" class="flex items-center space-x-3 rtl:space-x-reverse">
      <ColorSwatchIcon
        class="h-8 w-8 text-gray-900 transition duration-200 ease-in-out hover:text-dracula-400 dark:text-white dark:hover:text-dracula-400"
      />
    </a>
    <button
      data-collapse-toggle="navbar-default"
      type="button"
      class="inline-flex h-10 w-10 items-center justify-center rounded-lg p-2 text-sm text-gray-500 hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 dark:text-gray-400 dark:hover:bg-gray-700 dark:focus:ring-gray-600 md:hidden"
      aria-controls="navbar-default"
      aria-expanded="false"
    >
      <span class="sr-only">Open main menu</span>
      <svg
        class="h-5 w-5"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 17 14"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 1h15M1 7h15M1 13h15"></path>
      </svg>
    </button>
    <div class="hidden w-full md:block md:w-auto" id="navbar-default">
      <ul
        class="mt-4 flex w-full flex-col rounded-lg border border-gray-200 p-4 font-medium dark:border-gray-700 dark:bg-gray-800 md:mt-0 md:flex-row md:items-center md:space-x-3 md:border-0 md:bg-gray-50 md:p-0 md:dark:bg-gray-900 rtl:space-x-reverse"
      >
        {
          navItems.map((item) => (
            <li class="w-full">
              <a
                href={item.url}
                class="mt-2 inline-block w-full px-3 py-2 text-gray-900 transition duration-200 ease-in-out hover:bg-gray-100 dark:text-white dark:hover:bg-gray-700 dark:hover:text-white md:inline-block md:border-0 md:p-0 md:hover:bg-transparent md:hover:text-dracula-400 md:dark:hover:bg-transparent md:dark:hover:text-dracula-400"
                aria-label={item.label}
              >
                <div class="flex items-center">
                  {item.icon && <item.icon class="mr-2 h-5 w-5" />}
                  {<span class="inline md:hidden">{item.title}</span>}
                </div>
              </a>
            </li>
          ))
        }
        <li class="">
          <ThemeSwitcher />
        </li>
      </ul>
    </div>
  </div>
</nav>
